<div class="modal fade" data-app-modal="produtos.modal.dados" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="usuarios.form.dados">
                <div class="modal-header">
                    <button type="button" class="close" data-app-model-dismiss="produtos.modal.dados"><span>&times;</span></button>
                    <h4 class="modal-title">Novo produto</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" data-ng-show="produtos.modal.erros.aoSalvar">
                        <button type="button" class="close" data-ng-click="produtos.modal.limparMensagens()"><span aria-hidden="true">&times;</span></button>
                        <span data-ng-repeat="erro in produtos.modal.erros.aoSalvar">
                            <span data-ng-bind="erro"></span><br />
                        </span>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Categoria</label>
                                <select class="form-control"
                                        data-ng-model="produtos.produto.idCategoria"
                                        data-ng-options="t.id as t.descricao for t in produtos.categorias"
                                        data-ng-init="produtos.consultarCategorias()"
                                        required>
                                    <option value="">Selecione</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Nome</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="produtos.produto.nome"
                                       required />  
                            </div>
                            <div class="form-group">
                                <label>Preço</label>
                                <input class="form-control"
                                       data-ng-model="produtos.produto.preco"
                                       required/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-success"
                            data-ng-disabled="produtos.form.dados.$invalid || produtos.modal.salvando"
                            data-ng-click="produtos.modal.salvar()">
                        <span data-ng-show="produtos.modal.salvando.">Salvando&nbsp;<i class="fa fa-refresh fa-spin" ></i></span>
                        <span data-ng-hide="produtos.modal.salvando">Salvar</span>
                    </button>
                    <span>&nbsp;ou</span>
                    <button type="button" class="btn btn-link" data-app-modal-dismiss="produtos.modal.dados">
                        Fechar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>