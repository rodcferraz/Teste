<div class="panel panel-white">
    <div class="panel-heading"><i class="fa fa-search"></i>&nbsp;Filtro</div>
    <div class="panel-body">
        <form data-ng-submit="produtos.consultar(true); produtos.limparMensagens();">
            <div class="row-fluid">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Nome</label>
                        <input class="form-control" data-ng-model="produtos.filtro.dados.nome"/>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <button class="btn btn-primary" data-ng-disabled="produtos.filtro.pesquisando">
                        <span data-ng-show="produtos.filtro.pesquisando">Pesquisando&nbsp;<span class="fa fa-refresh fa-spin"  ></span></span>
                        <span data-ng-hide="produtos.filtro.pesquisando">Pesquisar</span>
                    </button>
                    <button class="btn btn-warning" data-ng-click="produtos.filtro.limpar(); produtos.limparMensagens();" >
                        Limpar Filtro
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>
