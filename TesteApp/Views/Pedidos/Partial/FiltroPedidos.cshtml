<div class="panel panel-white">
    <div class="panel-heading"><i class="fa fa-search"></i>&nbsp;Filtro</div>
    <div class="panel-body">
        <form data-ng-submit="pedidos.consultarProdutos(true); pedidos.limparMensagens();">
            <div class="row-fluid">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Nome</label>
                        <input class="form-control" data-ng-model="pedidos.filtro.dados.nome" />
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <button class="btn btn-primary" data-ng-disabled="pedidos.filtro.pesquisando">
                        <span data-ng-show="pedidos.filtro.pesquisando">Pesquisando&nbsp;<span class="fa fa-refresh fa-spin"></span></span>
                        <span data-ng-hide="pedidos.filtro.pesquisando">Pesquisar</span>
                    </button>
                    <button class="btn btn-warning" data-ng-click="pedidos.filtro.limpar(); pedidos.limparMensagens();">
                        Limpar Filtro
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>
