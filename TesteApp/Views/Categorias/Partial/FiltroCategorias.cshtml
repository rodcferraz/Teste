<div class="panel panel-white">
    <div class="panel-heading"><i class="fa fa-search"></i>&nbsp;Filtro</div>
    <div class="panel-body">
        <form data-ng-submit="categorias.consultar(true); categorias.limparMensagens();">
            <div class="row-fluid">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Descrição</label>
                        <input class="form-control"
                               data-ng-model="categorias.filtro.dados.descricao" />
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <button class="btn btn-primary"
                            data-ng-disabled="categorias.filtro.pesquisando">
                        <span data-ng-show="categorias.filtro.pesquisando">Pesquisando&nbsp;<span class="fa fa-refresh fa-spin"></span></span>
                        <span data-ng-hide="categorias.filtro.pesquisando">Pesquisar</span>
                    </button>
                    <button class="btn btn-warning" data-ng-click="categorias.filtro.limpar(); categorias.limparMensagens();">
                        Limpar Filtro
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


