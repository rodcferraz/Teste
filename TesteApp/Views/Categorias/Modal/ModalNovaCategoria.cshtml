<div class="modal fade" data-app-modal="categorias.modal.dados" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <form name="usuarios.form.dados">
                <div class="modal-header">
                    <button type="button" class="close" data-app-modal-dismiss="categorias.modal.dados"><span>&times;</span></button>
                    <h4 class="modal-title">Nova categoria</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" data-ng-show="categorias.modal.erros.aoSalvar">
                        <button type="button" class="close" data-ng-click="categorias.modal.limparMensagens()"><span aria-hidden="true">&times;</span></button>
                        <span data-ng-repeat="erro in categorias.modal.erros.aoSalvar">
                            <span data-ng-bind="erro"></span><br />
                        </span>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descrição</label>
                                <input class="form-control"
                                       maxlength="50"
                                       data-ng-model="categorias.categoria.descricao"
                                       required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-success"
                            data-ng-disabled="categorias.form.dados.$invalid || categorias.modal.salvando"
                            data-ng-click="categorias.modal.salvar()">
                        <span data-ng-show="categorias.modal.salvando">Salvando&nbsp;<i class="fa fa-refresh fa-spin"></i></span>
                        <span data-ng-hide="categorias.modal.salvando">Salvar</span>
                    </button>
                    <span>&nbsp;ou</span>
                    <button type="button" class="btn btn-link" data-app-modal-dismiss="categorias.modal.dados">
                        Fechar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

